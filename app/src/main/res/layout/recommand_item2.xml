<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="#F6F6F6">
    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_imageview"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/img_item2"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/img_item2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout"
            app:layout_constraintEnd_toStartOf="@+id/star_item2" android:layout_marginEnd="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_title"
                android:text="Title"
                android:textSize="13dp"
                android:padding="2dp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" android:id="@+id/tex_title_item2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_title"
                android:text="SubTitle"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:padding="2dp" android:id="@+id/tex_sub_item2"/>
    </LinearLayout>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_unlike" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/star_item2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>