<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <style name="NoTitleTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>

        <item name="colorPrimary">@color/colorPrimaryDark</item>    <!-- 배경 -->

        <item name="android:textColorPrimary">@android:color/white</item> <!-- 선택된 텍스트 색 -->
        <item name="android:textColorSecondary">@android:color/white</item> <!-- 탭바 텍스트 -->

        <item name="colorAccent">@android:color/white</item>     <!-- 막대기 색 -->
    </style>
</resources>
